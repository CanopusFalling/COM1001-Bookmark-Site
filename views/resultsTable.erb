<section class="basic-table" id="homepage-bookmarks-table">
                
    <%results.each do |entry|%>
    <div id="<%= entry[:ID]%>">
        <!-- Bookmark Details -->
        <a class="bookmark-details" href="bookmark-spesifics?bookmarkID=<%=entry[:ID]%>">
            <span class="bookmark-title"><%=h entry[:title]%></span>
            <span class="bookmark-views"><%=h entry[:views]%></span>
        </a>

        <!-- Editing Buttons. -->
        <div class="edit-buttons">
            <%if userHasEditRights entry[:ID] , session[:userID]%>
            <a id="delete-button-<%= entry[:ID]%>" href="delete-bookmark?bookmarkID=<%=entry[:ID]%>"><img class="edit-button" src="assets/images/bin-icon.png"></a>
            <img class="edit-button" src="assets/images/edit.png" onclick="window.location = 'edit-bookmark?bookmarkID=<%=h entry[:ID]%>'">
            <%end%>

            <img class="edit-button" src="assets/images/external-page-icon.png" onclick="openInNewTabAndRecordView('http:\/\/<%=entry[:link]%>',<%=entry[:ID]%>)">
            <a id="report-button-<%= entry[:ID]%>" href="report-bookmark?bookmarkID=<%=entry[:ID]%>"><img class="edit-button" src="assets/images/report.png"></a>
        </div>
    </div>
    <%end%>
</section>