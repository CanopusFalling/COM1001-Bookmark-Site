<section class="basic-table" id="homepage-bookmarks-table">
                
    <%results.each do |entry|%>
    <div id="<%= entry[:ID]%>">
        <!-- Bookmark Details -->
        <a class="bookmark-details" href="bookmark-spesifics?bookmarkID=<%=entry[:ID]%>">
            <span class="bookmark-title"><%=h entry[:title]%></span>
            <span class="bookmark-views"><%=h entry[:views]%></span>
        </a>

        <!-- Editing Buttons. -->
        <div class="edit-buttons">
            <img class="edit-button" src="assets/images/external-page-icon.png" onclick="openInNewTabAndRecordView('http:\/\/<%=h entry[:link]%>',<%=h entry[:ID]%>)">
            <img class="edit-button" src="assets/images/bin-icon.png" onclick="window.location = 'delete-bookmark?bookmarkID=<%=h entry[:ID]%>'">
            <img class="edit-button" src="assets/images/report.png" onclick="window.location = 'report-bookmark?bookmarkID=<%=h entry[:ID]%>'">
            <img class="edit-button" src="assets/images/edit.png" onclick="window.location = 'edit-bookmark?bookmarkID=<%=h entry[:ID]%>'">
        </div>
    </div>
    <%end%>
</section>